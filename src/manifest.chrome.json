{
    "manifest_version": 3,
    "version": "0.0.1",
    "name": "Novel Updates EX",
    "description": "Enhances the Novel Updates Website",
    "host_permissions": ["*://*.novelupdates.com/*"],
    "content_scripts": [
        {
            "matches": ["*://*.novelupdates.com/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["storage", "tabs", "webRequest"]
}
